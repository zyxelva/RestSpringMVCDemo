<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
	namespace：必须与对应的接口全类名一致
	id:必须与对应接口的某个对应的方法名一致
	
 -->
<mapper namespace="cn.edu.tju.rico.mapper.UserMapper">
	
	<insert id="save" parameterType="User">
		insert into sys_user(username,user_group) values(#{userName},#{userGroup})
	</insert>
	
	<update id="update" parameterType="User">
		update sys_user set username=#{userName} where user_id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from sys_user where user_id=#{id}
	</delete>
	
	 <!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->  
	<select id="findUserById" parameterType="int" resultType="User">
		select user_id id,username userName from sys_user where user_id=#{id}
	</select>
	
	<select id="findUserByUname" parameterType="String" resultType="User">
		select user_id id,username userName from sys_user where username=#{uname}
	</select>
	
	<select id="findUserByUnameAndPasswd" parameterType="String" resultType="User">
		select * from sys_user where username = #{uname} and passwd = #{passwd}
	</select>
	
	<select id="findAll" resultType="User">
		select user_id id,username userName,user_age age from sys_user
	</select>
	
</mapper>